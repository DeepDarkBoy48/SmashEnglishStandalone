# 构建阶段
FROM node:20-alpine AS builder

WORKDIR /app

# 复制依赖文件进行预安装（利用缓存）
COPY package*.json ./
RUN npm install

# 复制源码并构建
COPY . .
RUN npm run build

# 运行阶段
FROM nginx:alpine

# 删除默认静态文件
RUN rm -rf /usr/share/nginx/html/*

# 复制构建产物 (Vite 默认输出到 dist)
COPY --from=builder /app/dist /usr/share/nginx/html

# 复制自定义 Nginx 配置
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
